   */
  const handleEntryPress = useCallback((entryId: string) => {
    logger.info('Journal entry pressed', { entryId });
    onEntryPress(entryId);
  }, [onEntryPress]);

  return (
    <View style={styles.container}>
      {processedEntries.map(entry => (
        <JournalEntryCard
          key={entry.id}
          entry={entry}
          onPress={handleEntryPress}
        />
      ))}
    </View>
  );
});

