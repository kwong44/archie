class Logger {
  private service = 'archie-mobile';
  private version = '1.0.0';

  /**
   * Creates a structured log entry
   */
  private createLogEntry(
    level: LogEntry['level'],
    message: string,
    metadata: Record<string, any> = {}
  ): LogEntry {
    return {
      level,
      message,
      timestamp: new Date().toISOString(),
      service: this.service,
      ...metadata,
